<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_400"
    android:elevation="0dp">

    <LinearLayout
        android:id="@+id/name_and_title_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="horizontal"

        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="10dp"
            android:alpha="0.8"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:text="패션왕😎"
            android:textColor="@color/font_red"

            android:textSize="@dimen/title_large_size" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:alpha="0.8"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:text="강안나"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/title_large_size" />

    </LinearLayout>

    <View
        android:id="@+id/profile_secret_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30dp"

        android:layout_marginTop="10dp"
        android:background="@color/gray_200"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_and_title_text_container" />

    <TextView
        android:id="@+id/profile_setting_secret_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="개인정보"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:textColor="@color/gray_100"
        android:textSize="@dimen/body_small_size"

        android:layout_marginStart="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_secret_view"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_secret_card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"

        app:layout_constraintHeight_min="200dp"

        app:layout_constraintTop_toBottomOf="@+id/profile_setting_secret_data_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/center_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secret_card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/secret_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="이름"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/gray_100"
                android:textSize="@dimen/body_small_size"

                android:layout_marginStart="15dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                />

            <TextView
                android:id="@+id/secret_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="강안나"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/body_small_size"

                android:layout_marginTop="-14dp"
                android:layout_marginStart="15dp"

                app:layout_constraintTop_toBottomOf="@id/secret_name_title"
                app:layout_constraintStart_toStartOf="parent"

                />

            <View
                android:id="@+id/profile_secret_card_first_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"

                android:background="@color/gray_200"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secret_name_text" />

            <TextView
                android:id="@+id/secret_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="아이디"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/gray_100"
                android:textSize="@dimen/body_small_size"

                android:layout_marginStart="15dp"

                app:layout_constraintTop_toTopOf="@id/profile_secret_card_first_view"
                app:layout_constraintStart_toStartOf="parent"

                />

            <TextView
                android:id="@+id/secret_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="CreateID2"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/body_small_size"

                android:layout_marginTop="-14dp"
                android:layout_marginStart="15dp"

                app:layout_constraintTop_toBottomOf="@id/secret_id_title"
                app:layout_constraintStart_toStartOf="parent"

                />

            <View
                android:id="@+id/profile_secret_card_second_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"

                android:background="@color/gray_200"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secret_id_text" />

            <TextView
                android:id="@+id/secret_sex_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="성별"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/gray_100"
                android:textSize="@dimen/body_small_size"

                android:layout_marginStart="15dp"

                app:layout_constraintTop_toBottomOf="@id/profile_secret_card_second_view"
                app:layout_constraintStart_toStartOf="parent"

                />

            <TextView
                android:id="@+id/secret_sex_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="여자"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/body_small_size"

                android:layout_marginTop="-14dp"
                android:layout_marginStart="15dp"

                app:layout_constraintTop_toBottomOf="@id/secret_sex_title"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/secret_sex_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:clickable="true"

                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/btn_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/profile_secret_card_third_view"
                />

            <View
                android:id="@+id/profile_secret_card_third_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"

                android:background="@color/gray_200"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secret_sex_text" />

            <TextView
                android:id="@+id/secret_color_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="퍼스널 컬러"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/gray_100"
                android:textSize="@dimen/body_small_size"

                android:layout_marginStart="15dp"

                app:layout_constraintTop_toBottomOf="@id/profile_secret_card_third_view"
                app:layout_constraintStart_toStartOf="parent"

                />

            <TextView
                android:id="@+id/secret_color_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="겨울 쿨톤"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/body_small_size"

                android:layout_marginTop="-14dp"
                android:layout_marginStart="15dp"

                app:layout_constraintTop_toBottomOf="@id/secret_color_title"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/secret_color_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:clickable="true"

                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/btn_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/center_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_200"
        android:alpha="0.8"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_secret_card_container"
        android:layout_marginVertical="20dp"

        />

    <TextView
        android:id="@+id/profile_setting_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="계정 설정"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:textColor="@color/gray_100"
        android:textSize="@dimen/body_small_size"

        android:layout_marginStart="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center_view"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_setting_card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"

        app:layout_constraintTop_toBottomOf="@+id/profile_setting_data_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secret_setting_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/logout_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="로그아웃"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/gray_100"
                android:textSize="@dimen/body_small_size"

                android:layout_marginStart="15dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                />

            <View
                android:id="@+id/profile_secret_card_fourth_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"

                android:background="@color/gray_200"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logout_text" />

            <TextView
                android:id="@+id/delete_my_data_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="계정 탈퇴"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textColor="@color/gray_100"
                android:textSize="@dimen/body_small_size"

                android:layout_marginStart="15dp"

                app:layout_constraintTop_toBottomOf="@id/profile_secret_card_fourth_view"
                app:layout_constraintStart_toStartOf="parent"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>