<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_400"
    tools:context=".presentation.view.mainView.activities.MainActivity">

    <!-- 제목 FrameLayout -->
    <FrameLayout
        android:id="@+id/title_id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_ootday_logo"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

    </FrameLayout>

    <!-- 로그인 텍스트 -->
    <TextView
        android:id="@+id/login_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="로그인"
        android:textSize="@dimen/title_large_size"
        app:layout_constraintTop_toBottomOf="@+id/title_id1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 설명 텍스트 -->
    <TextView
        android:id="@+id/login_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:gravity="center"
        android:text="스타일링 추천은 로그인 후 이용할 수 있어요."
        android:textSize="@dimen/title_medium_size"
        app:layout_constraintTop_toBottomOf="@+id/login_text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/login_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="42dp"
        android:layout_marginHorizontal="30dp"
        android:hint="아이디를 입력해주세요."
        android:paddingLeft="20dp"
        android:backgroundTint="@color/sl_edittext_selector"
        android:textColorHint="@color/gray_200"
        android:textSize="@dimen/title_small_size"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/login_text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/password_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="비밀번호를 입력해주세요."
        android:paddingLeft="20dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/sl_edittext_selector"
        android:textColorHint="@color/gray_200"
        android:textSize="@dimen/title_small_size"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:inputType="textPassword"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/login_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/password_toggle_button"
        android:layout_width="48dp" android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ps_visibility_selector"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/login_area"
        app:layout_constraintTop_toTopOf="@+id/password_area"
        app:layout_constraintBottom_toBottomOf="@+id/password_area"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/login_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text=""
        android:textColor="@color/font_red"
        android:textSize="@dimen/title_small_size"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/password_area"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/login_error"
        app:layout_constraintStart_toStartOf="@+id/password_area"
        >

        <CheckBox
            android:id="@+id/remember_me_checkbox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/sl_login_checkbox_selector"
            android:button="@null"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 유지"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textSize="@dimen/title_small_size"
            android:textColor="@color/signup_text_color"
            android:alpha="0.8"
            android:paddingLeft="4dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/password_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginHorizontal="25dp"
        android:padding="0dp"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:text="Login"
        android:textColor="@color/sl_button_text_color"
        android:textSize="@dimen/body_medium_large_size"
        android:background="@drawable/sl_button_selector"

        app:backgroundTint="@null"
        app:elevation="0dp"
        android:stateListAnimator="@null"

        />

    <LinearLayout
        android:id="@+id/auth_links_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="150dp">

        <TextView
            android:id="@+id/text_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/gray_100"
            android:textSize="@dimen/title_small_size"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/divider1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textColor="@color/gray_100"
            android:textSize="@dimen/title_small_size"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/text_find_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textColor="@color/gray_100"
            android:textSize="@dimen/title_small_size"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/divider2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textColor="@color/gray_100"
            android:textSize="@dimen/title_small_size"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/text_find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textColor="@color/gray_100"
            android:textSize="@dimen/title_small_size"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:clickable="true"
            android:focusable="true"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


