<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_400">

    <TextView
        android:id="@+id/step1_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="30dp"
        android:paddingVertical="2dp"
        android:text="OOTDay에서 사용하실 이름을 입력해주세요."
        android:textSize="@dimen/body_large_size"
        android:fontFamily="@font/noto_sans_kr_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/step1_login_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:maxWidth="400dp"
        android:hint="이름을 2~5자로 입력해주세요. (한글 + 영문, 조합 가능)"
        android:textColorHint="@color/gray_200"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:textSize="@dimen/body_medium_size"
        android:backgroundTint="@color/sl_edittext_selector"
        android:maxLines="1"
        android:maxLength="5"
        android:layout_marginVertical="54dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step1_title"/>

    <TextView
        android:id="@+id/step1_name_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="안녕하세요"
        android:textColor="@color/font_red"
        android:textSize="@dimen/title_small_size"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/step1_login_area"
        app:layout_constraintStart_toStartOf="@id/step1_login_area"
        />

    <Button
        android:id="@+id/step1_next_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/step1_login_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        android:layout_marginHorizontal="30dp"
        android:padding="0dp"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:text="다음"
        android:textColor="@color/sl_button_text_color"
        android:textSize="@dimen/body_medium_large_size"
        android:background="@drawable/sl_button_selector"

        app:backgroundTint="@null"
        app:elevation="0dp"
        android:stateListAnimator="@null"
        android:enabled="false"

        />

</androidx.constraintlayout.widget.ConstraintLayout>