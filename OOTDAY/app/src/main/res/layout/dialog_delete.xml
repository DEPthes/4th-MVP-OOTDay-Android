<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/rounded_dialog_background">

    <TextView
    android:id="@+id/dialog_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="정말 탈퇴하시겠습니까?"
    android:textSize="@dimen/title_large_size"
    android:fontFamily="@font/noto_sans_kr_bold"
    android:textColor="@color/font_gray"
        android:layout_marginTop="-15dp"
    android:alpha="0.8"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dialog_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탈퇴 시 개인정보 및 이용정보가 모두 삭제되며 복구할 수 없습니다."
        android:textSize="@dimen/body_medium_size"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/gray_100"
        android:layout_marginTop="-15dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/center_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"

        android:background="@color/gray_200"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_description" />

    <TextView
        android:id="@+id/dialog_description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동의 시 영구적으로 계정이 삭제됩니다."
        android:textSize="@dimen/body_mega_small_size"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/gray_100"

        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/center_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/all_agree_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dialog_description2"
        app:layout_constraintStart_toStartOf="@id/dialog_description2"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:clickable="true"
        android:visibility="visible"
        >

        <CheckBox
            android:id="@+id/agree_checkbox"
            android:layout_width="8dp"
            android:layout_height="5.5dp"
            android:clickable="false"
            android:background="@drawable/sl_check_selector"
            android:button="@null" />

        <TextView
            android:id="@+id/agree_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유의사항 동의"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textSize="@dimen/body_mega_small_size"
            android:textColor="@color/gray_200"
            android:paddingLeft="4dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"

        android:layout_marginTop="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/all_agree_button">

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_close" />

        <ImageButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sl_delete_button_selector" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>