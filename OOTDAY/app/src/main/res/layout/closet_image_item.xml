<?xml version="1.0" encoding="utf-8"?>
<com.bottari.ootday.data.service.RatioFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginBottom="5dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="2dp"
    android:background="@drawable/rounded_item_background"
    app:ratio="115:139" >

    <ImageButton
    android:id="@+id/clothing_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_item_background"
    android:src="@drawable/image1"
    android:clipToOutline="true"
    android:scaleType="centerCrop"
    android:elevation="1dp"/>

    <View
        android:id="@+id/clothing_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sl_closet_overlay_selector"
        android:elevation="2dp"
        android:clickable="false"
        android:focusable="false"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="top|end"
        android:layout_margin="4dp"
        android:elevation="3dp"
        android:button="@null"
        android:background="@drawable/sl_item_check_selector"
        />
</com.bottari.ootday.data.service.RatioFrameLayout>