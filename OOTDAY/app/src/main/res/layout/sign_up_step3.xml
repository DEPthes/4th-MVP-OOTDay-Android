<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <TextView
        android:id="@+id/step3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30sp"
        android:paddingVertical="2sp"
        android:text="로그인에 사용할 아이디를 만들어주세요."
        android:textSize="@dimen/body_large_size"
        android:fontFamily="@font/noto_sans_kr_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/step3_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16sp"
        android:paddingVertical="4sp"
        android:hint="영문과 숫자를 조합해 5-10자만 입력할 수 있어요."
        android:textColorHint="@color/gray_medium"
        android:textColorHighlight="@color/brown_300"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:textSize="@dimen/body_medium_size"
        android:backgroundTint="@color/gray_medium"
        android:maxLines="1"
        android:maxLength="20"
        android:layout_marginVertical="54sp"
        android:layout_marginHorizontal="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step3_title"/>

    <TextView
        android:id="@+id/step3_id_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15sp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="안녕하세요"
        android:textColor="@color/font_red"
        android:textSize="@dimen/title_small_size"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/step3_id_input"
        app:layout_constraintStart_toStartOf="@id/step3_id_input"
        />

    <Button
        android:id="@+id/step3_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        app:layout_constraintTop_toBottomOf="@id/step3_id_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        android:background="@drawable/sl_next_button_selector"

        app:backgroundTint="@null"
        app:elevation="0dp"
        android:stateListAnimator="@null"

        />

</androidx.constraintlayout.widget.ConstraintLayout>