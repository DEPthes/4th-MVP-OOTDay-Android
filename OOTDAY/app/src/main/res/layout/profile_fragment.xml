<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:parentTag="androidx.fragment.app.FragmentContainerView">

    <View
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_item_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="0dp"
        android:background="@color/white"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_view"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=""
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="@dimen/title_large_size"
            android:textColor="@color/font_gray"
            android:alpha="0.8"

            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/profile_view"
            />

        <View
        android:id="@+id/profile_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_200"

        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"

        app:layout_constraintTop_toBottomOf="@+id/name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_setting_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="center"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_view"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            >

            <ImageView
                android:id="@+id/profile_setting_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile_setting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/profile_setting_text"
                />

            <TextView
                android:id="@+id/profile_setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 설정"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textSize="@dimen/body_medium_large_size"
                android:textColor="@color/font_gray"
                android:alpha="0.8"

                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profile_setting_ic"
                />

            <ImageView
                android:id="@+id/profile_setting_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_right"

                android:clickable="true"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_closet_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="center"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_setting_container"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >

            <ImageView
                android:id="@+id/my_closet_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_closet"


                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/my_closet_text"
                />

            <TextView
                android:id="@+id/my_closet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 옷장"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textSize="@dimen/body_medium_large_size"
                android:textColor="@color/font_gray"
                android:alpha="0.8"

                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_closet_ic"
                />

            <ImageView
                android:id="@+id/my_closet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_right"

                android:clickable="true"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_feed_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="center"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_closet_container"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginLeft="27dp"
            android:layout_marginRight="30dp"
            >

            <ImageView
                android:id="@+id/my_feed_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_myfeed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/my_feed_text"
                />

            <TextView
                android:id="@+id/my_feed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 피드"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textSize="@dimen/body_medium_large_size"
                android:textColor="@color/font_gray"
                android:alpha="0.8"

                android:layout_marginLeft="9dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_feed_ic"
                />

            <ImageView
                android:id="@+id/my_feed_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_right"

                android:clickable="true"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_heart_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="center"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_feed_container"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginLeft="27dp"
            android:layout_marginRight="30dp"
            >

            <ImageView
                android:id="@+id/my_heart_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/my_heart_text"
                />

            <TextView
                android:id="@+id/my_heart_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아요 누른 피드"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textSize="@dimen/body_medium_large_size"
                android:textColor="@color/font_gray"
                android:alpha="0.8"

                android:layout_marginLeft="9dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_heart_ic"
                />

            <ImageView
                android:id="@+id/my_heart_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_right"

                android:clickable="true"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_card_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/brown_400"
        app:strokeWidth="2dp"
        android:elevation="10dp"
        tools:layout_editor_absoluteY="459dp">

        <ImageView
            android:layout_width="99dp"
            android:layout_height="97dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:src="@drawable/ic_profile_picture_default" />

    </com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>